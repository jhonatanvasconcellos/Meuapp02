/** home.component.css
 * Folhas de estilo
 */

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 1rem 0;
  background: white;
  cursor: pointer;
  position: relative;
}

.item:hover {
  background: rgb(244, 244, 244);
}

.item img {
  width: 100px;
  height: 100px;
}

.item h3 {
  margin: 0;
  padding-bottom: 1rem;
}

.item div {
  padding: 1rem;
}

.list-img {
  background: #fff;
  min-width: 100px;
  min-height: 100px;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}
